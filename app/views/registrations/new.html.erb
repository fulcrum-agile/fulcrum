<% content_for :title_bar do %>
  <span class="navbar-brand"><%= t('sign_up') %></span>
<% end %>

<div class="container">
  <div class="row">

    <div class="col-sm-12 col-md-6 col-lg-4 col-md-offset-3 col-lg-offset-4">

      <h3 class="auth-welcome text-center"><%= t('welcome') %></h3>

      <div class="auth-wrapper">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form-horizontal' }) do |f| %>
          <%= devise_error_messages! %>

          <div class="auth-form-group">
            <%= f.label :name, class: 'sr-only' %>
            <%= f.text_field :name, placeholder: true, class: 'form-control auth-form-control' %>
          </div>

          <div class="auth-form-group">
            <%= f.label :initials, class: 'sr-only' %>
            <%= f.text_field :initials, placeholder: true, class: 'form-control auth-form-control' %>
          </div>

          <div class="auth-form-group">
            <%= f.label :username, class: 'sr-only' %>
            <%= f.text_field :username, placeholder: true, class: 'form-control auth-form-control' %>
          </div>

          <div class="auth-form-group">
            <%= f.label :email, class: 'sr-only' %>
            <%= f.email_field :email, placeholder: true, class: 'form-control auth-form-control' %>
          </div>

          <div class="auth-form-group">
            <%= f.label :captcha, class: 'sr-only' %>
            <%= recaptcha_tags %>
          </div>

          <div class="clearfix"></div>

          <div class="actions clearfix">
            <%= f.submit t('sign_up'), class: 'btn btn-primary pull-right auth-button-submit' %>
          </div>
        <% end %>
      </div>

    </div>

    <div class="clearfix"></div>

    <div class="col-sm-12 col-md-6 col-lg-4 col-md-offset-3 col-lg-offset-4">
      <%= render 'devise/shared/links' %>
    </div>

  </div>
</div>
